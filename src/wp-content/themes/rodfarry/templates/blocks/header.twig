<div class="header">
    <div class="container">
        <div class="row-fixed">
            {% if site.issue %}
                <div class="three columns">
                    <a href="{{ site.url }}"><img src="{{ getImage(site.logo, 'logo') }}" alt="" class="header-logo" /></a>
                </div>
                <div class="six columns u-text-center">
                    <div class="issue {% if site.issues is iterable %}issue--archive{% endif %}">
                        {{ site.issue.title }}
                        {% if site.issues is iterable %}
                            <div class='issue-archive-icon'></div>
                        {% endif %}
                    </div>
                </div>
            {% else %}
                <div class="nine columns">
                    <a href="{{ site.url }}">
                        {% if site.logo %}
                            <img src="{{ getImage(site.logo, 'logo') }}" alt="" class="header-logo" />
                        {% else %}
                            <h1>{{ site.title }}</h1>
                        {% endif %}
                    </a>
                </div>
            {% endif %}
            <div class="three columns u-text-right u-desktop">
                <form class="header-search">
                    <input type="text" />
                    <input type="submit" value="Search" />
                </form>
            </div>
            <div class="three columns u-text-right u-mobile">
                <div class="nav-header-mobile-open">open menu</div>
            </div>
        </div>
    </div>
    {% if site.issues is iterable %}
        <div class="row issue-archive">
            <ul>
                {% for issue in site.issues %}
                    <li><a href='{{ issue.link }}'>{{ issue.title }}</a></li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
</div>