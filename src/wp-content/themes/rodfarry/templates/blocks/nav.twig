<div class="nav">
    <div class="container">
        <div class="nav-header-mobile u-mobile">
            <div class="nav-header-mobile-close">close menu</div>
            Navigation
        </div>
        <ul>
            {% for item in site.nav %}
                <li class="{{ item.active ? 'active' : '' }}">
                    <a href="{{ item.link }}" {% if item.external %}target='_blank'{% endif %}>{{ item.title }}</a>
                    {% if item.children %}
                        <ul>
                            {% for child in item.children %}
                                <li>
                                    <a href="{{ child.link }}" {% if child.external %}target='_blank'{% endif %}>{{ child.title }}</a>

                                    {% if child.children %}
                                        <ul>
                                            {% for child2 in child.children %}
                                                <li>
                                                    <a href="{{ child2.link }}" {% if child2.external %}target='_blank'{% endif %}>{{ child2.title }}</a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>